 <style>
    select.form-control:not([size]):not([multiple]) {
    height: calc(3rem + 2px);
    }
 </style>
 <div class="bg-page py-5">
        <div class="container">
            <!-- main-heading -->
            <h2 class="main-title-w3layouts mb-2 text-center text-white">Register</h2>
            <!--// main-heading -->
            <div class="form-body-w3-agile text-center w-lg-50 w-sm-75 w-100 mx-auto mt-5">
                
                <form action="/signup" method="post">
                    <div class="form-group">
                        <label>Username</label>
                        <input name="username" type="text" class="form-control" placeholder="Enter username"  value="{{formData.username}}">
                        {{#if errors.username}}
                        <p class="small text-danger">{{ errors.username}}</p>
                        {{/if}}
                    </div>
                    
                    <div class="form-group">
                        <label>Register as admin</label>
                        <select id="inputState" name="role" class="form-control">
                                    <option value="user">User</option>
                                    <option value="admin">Admin</option>
                                </select>
                    </div>

                    <div class="form-group">
                        <label>Email address</label>
                        <input name="email" type="email" class="form-control" placeholder="Enter email"  value="{{formData.email}}">
                        {{#if errors.email}}
                        <p class="small text-danger">{{ errors.email}}</p>
                        {{/if}}
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input name="password" type="password" class="form-control" placeholder="Password" >
                        {{#if errors.password}}
                        <p class="small text-danger">{{ errors.password}}</p>
                        {{/if}}
                    </div>

                    

                    <button type="submit" class="btn btn-primary error-w3l-btn mt-sm-5 mt-3 px-4">Submit</button>
                </form>
                <p class="paragraph-agileits-w3layouts mt-4">Already have account?
                    <a href="/login">Login</a>
                </p>
            </div>
        </div>
    </div>